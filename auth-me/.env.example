# -----------------------------------------------------------------------------
# Environment Details
# -----------------------------------------------------------------------------
ENVIRONMENT=development

# -----------------------------------------------------------------------------
# Database (PostgreSQL) Configuration
# -----------------------------------------------------------------------------
DATABASE_URL=postgres://username:password@localhost/dbname
SCHEMA=«custom_schema_name_here»

# -----------------------------------------------------------------------------
# JSON Web Token Credentials
# -----------------------------------------------------------------------------
JWT_SECRET=your_secret_key
JWT_EXPIRES_IN=604800
JWT_REFRESH_SECRET=your_refresh_secret_key
JWT_REFRESH_EXPIRES_IN=900

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
RUST_LOG=debug
PORT=«port_number_here»

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_URL=redis://127.0.0.1:6379
RATE_LIMIT_RPM=60

# -----------------------------------------------------------------------------
# Email Service Configuration
# -----------------------------------------------------------------------------
SMTP_POOL_SIZE=10
TEMPLATE_CACHE_TTL_SECONDS=3600
REDIS_TEMPLATE_TTL_SECONDS=7200
ENABLE_REDIS_TEMPLATE_CACHE=true

# -----------------------------------------------------------------------------
# Initial Admin Credentials
# -----------------------------------------------------------------------------
INITIAL_ADMIN_NAME=«admin_name_here»
INITIAL_ADMIN_EMAIL=admin@yourwebsite.com
INITIAL_ADMIN_USERNAME=admin
INITIAL_ADMIN_PASSWORD=«custom_password_here»

# -----------------------------------------------------------------------------
# SMTP Server Configuration
# -----------------------------------------------------------------------------
SMTP_SERVER=smtp.your-email-provider.com
SMTP_PORT=587 # Common ports: 587 (TLS), 465 (SSL), 25 (non-secure)
SMTP_USERNAME=your_email@example.com
SMTP_PASSWORD=your_email_password
SMTP_FROM_ADDRESS=no-reply@yourdomain.com

# -----------------------------------------------------------------------------
# AWS S3 Bucket Configuration
# -----------------------------------------------------------------------------
AWS_S3_BUCKET_NAME=your_aws_s3_bucket_name
AWS_S3_KEY=your-aws_s3_key
AWS_S3_SECRET=your_aws_s3_secret
AWS_REGION=your_aws_region